<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.simle1.photomosaic.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press for Mosaic"
        android:id="@+id/btnMosaic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="123dp"
        android:id="@+id/iv1" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="123dp"
        android:id="@+id/iv2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv1"
        android:layout_toEndOf="@+id/iv1"
        android:layout_alignBottom="@+id/iv1" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnMosaic"
        android:layout_toLeftOf="@+id/iv2"
        android:layout_toStartOf="@+id/iv2"
        android:layout_below="@+id/iv1" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv4"
        android:layout_alignBottom="@+id/iv3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv1" />
</RelativeLayout>
